/* Define a fonte Inter como padrão e cores base */
:root {
    --cor-principal: #3b82f6; /* Tailwind blue-500 */
    --cor-sucesso: #10b981; /* Tailwind emerald-500 */
    --cor-falha: #ef4444; /* Tailwind red-500 */
}

/* Estilos personalizados para o destaque visual de Aprovação/Reprovação */
.aprovado {
    background-color: #d1fae5; /* Verde claro para Aprovado */
    color: var(--cor-sucesso);
    font-weight: 600;
}

.reprovado {
    background-color: #fee2e2; /* Vermelho claro para Reprovado */
    color: var(--cor-falha);
    font-weight: 600;
}

/* Estilo para a tabela em telas menores (Responsividade) */
@media (max-width: 768px) {
    .table-container {
        overflow-x: auto; /* Permite scroll horizontal na tabela */
    }
    .table-container table {
        min-width: 700px; /* Garante que a tabela não fique muito estreita */
    }
}

/* Estilo para a mensagem de feedback (substituindo o alert) */
#feedback-message {
    position: fixed;
    top: 1rem;
    right: 1rem;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    display: none;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
}

/* Estilos adicionais para botões */
button {
    transition: transform 0.1s ease-in-out, box-shadow 0.1s ease-in-out;
}

button:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

button:active {
    transform: translateY(1px);
}